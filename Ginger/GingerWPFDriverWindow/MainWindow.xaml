    <Window x:Class="GingerWPFDriverWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GingerWPFDriverWindow"
        mc:Ignorable="d"
        Title="Driver Window" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="262*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5" Background="Aqua">
            <Button x:Name="RecordButton" Click="RecordButton_Click">Record</Button>
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Row="1"/>
        <StatusBar Grid.Row="2">
            <Label x:Name="StatusBarLabel">Status</Label>
        </StatusBar>
    </Grid>
</Window>
