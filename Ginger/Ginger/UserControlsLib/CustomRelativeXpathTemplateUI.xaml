<UserControl x:Class="Ginger.UserControlsLib.POMLearnig.CustomRelativeXpathTemplateUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ginger.UserControlsLib.POMLearnig" xmlns:Ginger="clr-namespace:Ginger"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
        <CheckBox x:Name="xCustomRelativeXpathCofigChkBox" Click="xCustomRelativeXpathCofigChkBox_Click"  Content="Custom Relative Xpath Learning Configuration" IsChecked="False" />
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Ginger:ucGrid x:Name="xRelXpathSettingsGrid" Visibility="Collapsed" AutomationProperties.AutomationId="RelXpathSettings_AID" Title="Template:" ShowAdd="Visible" ShowDelete="Visible" ShowClearAll="Collapsed" ShowEdit="Collapsed" ShowRefresh="Collapsed" ShowCopy="Collapsed" ShowPaste="Collapsed" ShowCut="Collapsed" ShowTitle="Collapsed"/>
        </StackPanel>
    </Grid>
</UserControl>
