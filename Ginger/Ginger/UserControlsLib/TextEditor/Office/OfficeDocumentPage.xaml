    <Page x:Class="Ginger.UserControlsLib.TextEditor.Office.OfficeDocumentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ginger.UserControlsLib.TextEditor.Office"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="OfficeDocumentPage" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="68*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="OpenButton" Click="OpenButton_Click">Open</Button>
            <Label x:Name="FileNameLabel">File name</Label>
        </StackPanel>
        <Frame x:Name="frm"></Frame>

    </Grid>
</Page>
