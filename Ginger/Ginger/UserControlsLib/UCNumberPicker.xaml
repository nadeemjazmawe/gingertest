<UserControl x:Class="Ginger.UserControlsLib.UCNumberPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ginger.UserControlsLib"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="55">
    <Grid>
        <DockPanel>
            <Button x:Name="xDecreaseCounterBtn" Style="{StaticResource @InputButtonStyleRoundCorner}" x:FieldModifier="private"  Height="22" FontWeight="ExtraBold" Content="-" VerticalContentAlignment="Center" VerticalAlignment="Center" Width="20" Click="xDecreaseCounterBtn_Click" />
            <TextBox x:Name="xCountTextBox" Style="{StaticResource $TextBoxStyle}"  Width="35" Height="22" HorizontalAlignment="Left" x:FieldModifier="private" Text="1" VerticalContentAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" TextChanged="xCountTextBox_TextChanged"></TextBox>
            <Button x:Name="xIncreaseCounterBtn" Style="{StaticResource @InputButtonStyleRoundCorner}" HorizontalAlignment="Left" x:FieldModifier="private"  Height="22" FontWeight="ExtraBold" Content="+" VerticalContentAlignment="Center" VerticalAlignment="Center" Width="20" Click="xIncreaseCounterBtn_Click" />
        </DockPanel>
    </Grid>
</UserControl>
