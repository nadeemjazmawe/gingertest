            <DataTemplate x:Key="UserValueExpressionButton">
                <Button x:Name="GridUserVEButton" Content="..." Click="GridUserVEButton_Click"  Style="{DynamicResource DataGridCellButtonStyle}"/>
            </DataTemplate>
            <DataTemplate x:Key="PswdValueExpressionButton">
                <Button x:Name="GridPswdVEButton" Content="..." Click="GridPswdVEButton_Click"  Style="{DynamicResource DataGridCellButtonStyle}"/>
            </DataTemplate>
            <DataTemplate x:Key="ConnStrValueExpressionButton">
                <Button x:Name="GridConnStrVEButton" Content="..." Click="GridConnStrVEButton_Click"  Style="{DynamicResource DataGridCellButtonStyle}"/>
            </DataTemplate>
        </Grid.Resources>
