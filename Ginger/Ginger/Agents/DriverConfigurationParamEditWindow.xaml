    <Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Actions="clr-namespace:Ginger.Actions" x:Class="Ginger.Agents.DriverConfigurationParamEditWindow"
        Title="Driver Configuration Param Edit" Height="200" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="515*"/>
        </Grid.ColumnDefinitions>

        <Actions:UCValueExpression x:Name="ParamValue" Grid.Row="1" Grid.Column="1"/>
        <Label Content="Parameter"/>
        <Label Content="Value" Grid.Row="1"/>
        <Label x:Name="ParamNameLabel" Content="ParamName" Grid.Column="1"/>
        <Button x:Name="OKButton" Content="OK" Grid.Column="1" HorizontalAlignment="Left" Height="35" Margin="442,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="73" Click="OKButton_Click"/>
        
    </Grid>
</Window>
