    <Window x:Class="GingerWPF.RunLib.GingerRunnerControlsMiniWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GingerWPF.RunLib"
        mc:Ignorable="d"
        Title="GingerRunnerControlsMiniWindow" Height="100" Width="300" ResizeMode="NoResize" Topmost="True" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
