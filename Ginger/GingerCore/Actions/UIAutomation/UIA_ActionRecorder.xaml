    <Window x:Class="GingerCore.Actions.UIA_ActRecorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ginger PowerBuilder Driver (CSM)" Height="400" Width="600" Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnStartRecord" Click="btnStartRecord_Click" Height="30" Width="70" Content="Record" />            
            <Button x:Name="GetRecordingButton" Click="GetRecordingButton_Click" Content="Get Recording" Height="30"  Width="100"  />
            <Button x:Name="HighLightButton" Click="HighLightButton_Click" Content="HighLight" Height="30"  Width="70"  />
            <Button x:Name="LoadButton" Click="LoadButton_Click" Content="Load" Height="30" Margin="0,10,0,0" VerticalAlignment="Top" Width="69"/>
        </StackPanel>
        <TextBox x:Name="txtLog" Grid.Row="1">Log</TextBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label x:Name="lblASCFHost" Content="ASCF Host"></Label>
            <Label x:Name="lblStatus" Content="Status"></Label>
            
        </StackPanel>
    </Grid>
</Window>
