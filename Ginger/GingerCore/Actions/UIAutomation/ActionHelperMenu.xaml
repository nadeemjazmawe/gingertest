    <Window x:Class="GingerCore.Actions.UIAutomation.ActionHelperMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Topmost="True"
        Loaded="Window_Loaded"
        Name="ActionHelperMenuWindow" Title="ActionHelperMenu" Height="281" Width="224.5" WindowStartupLocation="CenterScreen" 
        AllowsTransparency="True" WindowStyle="None" ResizeMode="CanResize" BorderBrush="Black" BorderThickness="1">
