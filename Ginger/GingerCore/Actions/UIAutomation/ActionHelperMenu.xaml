                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0.558"/>
                        <GradientStop Color="#00F0F0F0" Offset="0.95"/>
                        <GradientStop Color="#FFF0F0F0" Offset="0.434"/>
                        <GradientStop Color="#00F0F0F0" Offset="0.062"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Margin="0,0,0,-89"/>
            </TabItem>
            <TabItem Header="Validations" BorderBrush="{x:Null}" Margin="4,0,-8,-15">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0.558"/>
                        <GradientStop Color="#00F0F0F0" Offset="0.95"/>
                        <GradientStop Color="#FFF0F0F0" Offset="0.434"/>
                        <GradientStop Color="#00F0F0F0" Offset="0.062"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid HorizontalAlignment="Left" Width="196">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="193*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>


    </Grid>


</Window>
