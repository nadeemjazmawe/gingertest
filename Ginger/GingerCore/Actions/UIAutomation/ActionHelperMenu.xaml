    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="137"/>
        </Grid.ColumnDefinitions>
        <TabControl HorizontalAlignment="Left" Height="170" VerticalAlignment="Top" Width="202" Grid.ColumnSpan="2" Grid.RowSpan="2" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
